def is_leap(year):
    leap = False
    if(year%4)==0and(year%400)==0and(year%100)==0:
        leap = True
    elif(year%4)==0 or(year%100)==0 and (year%400)==0:
        leap = True
    
    if(year)==1800 or (year)==1900 or (year)==2100 or (year) == 2200 or (year) == 2300 or (year) == 2500:
        leap = False
    
    return leap
